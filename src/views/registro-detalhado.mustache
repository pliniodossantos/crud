{{>partials/header}}


    <div class="container bg-white border border-light mb-3">

        <div class="row">
            <div class="col p-4 mt-5 d-flex justify-content-center">
                <figure>
                    <img src="https://www.shutterstock.com/image-vector/blank-avatar-photo-place-holder-600w-1095249842.jpg"
                        height="200" width="200">

                </figure>
            </div>
        </div>
        {{#registro}}


        <ul class="list-group mb-4">
            <li class="list-group-item"><b>Registro nยบ:</b> {{id}} </li>
